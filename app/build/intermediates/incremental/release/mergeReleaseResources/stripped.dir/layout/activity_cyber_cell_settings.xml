<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CyberCellSettingsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cyber Cell Helpline Number"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cyberCellNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter cyber cell phone number"
        android:inputType="phone"
        android:maxLines="1"
        android:padding="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Alert Message"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cyberAlertMessageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="top|start"
        android:hint="Enter alert message to send to cyber cell"
        android:inputType="textMultiLine"
        android:lines="4"
        android:padding="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="When you press the 'C' button on your emergency watch, this number will be called and receive the alert message."
        android:textColor="#757575"
        android:textSize="14sp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="Save Settings" />

</LinearLayout> 